<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectionFragment">

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="266dp"
        android:layout_height="52dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="48dp"
        android:text="@string/btnChooseBand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="48dp"
        android:text="@string/btnConnection"
        app:layout_constraintBottom_toTopOf="@+id/btnChoose"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="74dp"
        android:layout_height="23dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="308dp"
        android:hint="Connected"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="308dp"
        android:text=""
        android:hint="100%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="256dp"
        android:src="@drawable/icon_band"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="76dp"
        android:src="@drawable/icon_battery"
        app:layout_constraintBottom_toTopOf="@+id/txtBattery"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>